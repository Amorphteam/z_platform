[
  {
    "level": 1,
    "key": "khotab_1",
    "title": "يذكر فيها ابتداءَ خلق السماءِ والاَرض، وخلق آدم عليه الصلاة والسلام",
    "id": 1,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_2",
    "title": "بعد انصرافه من صفين",
    "id": 2,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_3",
    "title": "المعروفة بالشقشقية",
    "id": 3,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_4",
    "title": "وهي من أفصح كلامه(عليه السلام)",
    "id": 4,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_5",
    "title": "لما قبض رسول الله (صلى الله عليه وآله) وخاطبه العباس وأبو سفيان في أن يبايعا له بالخلافة",
    "id": 5,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_6",
    "title": "لمّا أشير عليه بألاّ يتبع طلحةَ والزبيرَ ولا يُرصدَ لهما القتال",
    "id": 6,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_7",
    "title": "يذم فيها أتباع الشيطان",
    "id": 7,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_8",
    "title": "يعني به الزبير في حال اقتضت ذلك",
    "id": 8,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_9",
    "title": "في صفته وصفة خصومه ويقال إنّها في أصحاب الجمل",
    "id": 9,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_10",
    "title": "يريد الشيطان أويكني به عن قوم",
    "id": 10,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_11",
    "title": "لابنه محمّد بن الحنفية لمّا أعطاه الراية يوم الجمل",
    "id": 11,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_12",
    "title": "لما أظفره الله تعالى بأصحاب الجمل",
    "id": 12,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_13",
    "title": "في ذم البصرة وأهلها بعد وقعة الجمل",
    "id": 13,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_14",
    "title": "في ذم البصرة أيضاً",
    "id": 14,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_15",
    "title": "فيما ردّه على المسلمين من قطائع عثمان",
    "id": 15,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_16",
    "title": "من كلام له (عليه السلام) لما بويع بالمدينة",
    "id": 16,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_17",
    "title": "في صفة من يتصدّى للحكم بين الاُْمة وليس لذلك بأَهل",
    "id": 17,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_18",
    "title": "في ذمّ اختلاف العلماء في الفتيا",
    "id": 18,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_19",
    "title": "قاله للاشعث بن قيس وهو على منبر الكوفة يخطب",
    "id": 19,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_20",
    "title": "وفيها ينفر من الغفلة وينبه إلى الفرار لله",
    "id": 20,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_21",
    "title": "وهي كلمة جامعة للعظة والحكمة",
    "id": 21,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_22",
    "title": "حين بلغه خبر الناكثين ببيعته",
    "id": 22,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_23",
    "title": "وتشتمل على تهذيب الفقراء بالزهد وتأديب الاغنياء بالشفقة",
    "id": 23,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_24",
    "title": "وهي كلمة جامعة له",
    "id": 24,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_25",
    "title": "حينما تواترت عليه الأخبار باستيلاء أصحاب معاوية على البلاد",
    "id": 25,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_26",
    "title": "وفيها يصف العرب قبل البعثة ثم يصف حاله قبل البيعة له",
    "id": 26,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_27",
    "title": "يستنهض بها الناس حين ورد خبر غزو الانبار، وفيها يذكر فضل الجهاد",
    "id": 27,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_28",
    "title": "وهو فصل من الخطبة التي أولها: «الحمد لله غير مقنوط من رحمته» وفيه أحد عشر تنبيهاً",
    "id": 28,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_29",
    "title": "بعد غارة الضحاك بن قيس صاحب معاوية على الحاجّ بعد قصة الحكمين",
    "id": 29,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_30",
    "title": "في معنى قتل عثمان",
    "id": 30,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_31",
    "title": "لما أنفذ عبد الله بن العباس(رحمه الله) إلى الزبير",
    "id": 31,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_32",
    "title": "وفيها يصف زمانه بالجور، ويقسم الناس فيه خمسة أصناف، ثم يزهد في الدنيا",
    "id": 32,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_33",
    "title": "عند خروجه لقتال أهل البصرة",
    "id": 33,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_34",
    "title": "في استنفار الناس إلى الشام بعد فراغه من أمر الخوارج",
    "id": 34,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_35",
    "title": "بعد التحكيم وما بلغه من أمر الحكمين",
    "id": 35,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_36",
    "title": "في تخويف أَهل النهروان",
    "id": 36,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_37",
    "title": "يجري مجرى الخطبة",
    "id": 37,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_38",
    "title": "وفيها علة تسمية الشبهة شبهة، ثم بيان حال الناس فيها",
    "id": 38,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_39",
    "title": "خطبها عند علمه بغزوة النعمان بن بشير صاحب معاوية لعين التمر",
    "id": 39,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_40",
    "title": "في الخوارج لما سمع(عليه السلام) قولهم: «لا حكم إلاّ لله»",
    "id": 40,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_41",
    "title": "وفيها ينهى عن الغدر ويحذر منه",
    "id": 41,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_42",
    "title": "يحذر فيها من اتباع الهوى وطول الامل في الدنيا",
    "id": 42,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_43",
    "title": "قد أشار عليه أصحابه بالاستعداد لحرب أهل الشام بعد إرساله جرير بن عبدالله البجلي إلى معاوية",
    "id": 43,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_44",
    "title": "لمّا هرب مَصْقَلة بنُ هُبيرة الشيباني إلى معاوية",
    "id": 44,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_45",
    "title": "وهو بعض خطبة طويلة خطبها يوم الفطر",
    "id": 45,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_46",
    "title": "عند عزمه على المسير إِلى الشام",
    "id": 46,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_47",
    "title": "في ذكر الكوفة",
    "id": 47,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_48",
    "title": "عند المسير إلى الشام",
    "id": 48,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_49",
    "title": "وفيها جملة من صفات الربوبية والعلم الالهي",
    "id": 49,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_50",
    "title": "وفيها بيان لما يخرب العالم به من الفتن وبيان هذه الفتن",
    "id": 50,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_51",
    "title": "ومن كلامه (عليه السلام)",
    "id": 51,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_52",
    "title": "قد تقدّم مختارها برواية ونذكرها هاهنا برواية أخرى لتغاير الروايتين",
    "id": 52,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_53",
    "title": "يصف أصحابه بصفين حين طال منعهم له من قتال أهل الشام",
    "id": 53,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_54",
    "title": "وقد استبطأ أصحابه إذنه لهم في القتال بصفين",
    "id": 54,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_55",
    "title": "يصف أصحاب رسول الله",
    "id": 55,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_56",
    "title": "من كلام له (عليه السلام) لأصحابه",
    "id": 56,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_57",
    "title": "ومن كلامه (عليه السلام) كلم به الخوارج حين اعتزلوا الحكومة وتنادوا: أن لا حكم إلاّ لله",
    "id": 57,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_58",
    "title": "وقال(عليه السلام) لما عزم على حرب الخوارج",
    "id": 58,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_59",
    "title": "وقال(عليه السلام) لما قتل الخوارج",
    "id": 59,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_60",
    "title": "وقال(عليه السلام) في الخوارج",
    "id": 60,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_61",
    "title": "لمّا خُوِّف من الغيلة",
    "id": 61,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_62",
    "title": "يحذر من فتنة الدنيا",
    "id": 62,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_63",
    "title": "في المبادرة إلى صالح الاعمال",
    "id": 63,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_64",
    "title": "وفيها مباحث لطيفة من العلم الالهي",
    "id": 64,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_65",
    "title": "في تعليم الحرب والمقاتلة في بعض أيام صفين",
    "id": 65,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_66",
    "title": "في معنى الانصار",
    "id": 66,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_67",
    "title": "لمّا قلد محمّد بن أبي بكر مصر فملكت عليه وقتل",
    "id": 67,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_68",
    "title": "في ذمّ أصحابه",
    "id": 68,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_69",
    "title": "وقال(عليه السلام) في سُحرة اليوم الذي ضرب فيه",
    "id": 69,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_70",
    "title": "في ذم أَهل العراق",
    "id": 70,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_71",
    "title": "علّم فيها الناس الصلاة على رسول الله(صلى الله عليه وآله)",
    "id": 71,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_72",
    "title": "قاله لمروان بن الحكم بالبصرة",
    "id": 72,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_73",
    "title": "لمّا عزموا على بيعة عثمان",
    "id": 73,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_74",
    "title": "لمّا بلغه اتهام بني أُميّة له بالمشاركة في دم عثمان",
    "id": 74,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_75",
    "title": "في الحث على العمل الصالح",
    "id": 75,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_76",
    "title": "وذلك حين منعه سعيد بن العاص حقه",
    "id": 76,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_77",
    "title": "ومن كلمات له (عليه السلام) كان يدعوبها",
    "id": 77,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_78",
    "title": "لبعض أصحابه لمّا عزم على المسير إِلى الخوارج",
    "id": 78,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_79",
    "title": "بعد فراغه من حرب الجمل، في ذم النساء",
    "id": 79,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_80",
    "title": "في الزهد",
    "id": 80,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_81",
    "title": "في صفة الدنيا",
    "id": 81,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_82",
    "title": "وهي من الخطب العجيبة تسمّى «الغراء»",
    "id": 82,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_83",
    "title": "في ذكر عمروبن العاص",
    "id": 83,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_84",
    "title": "وفيها صفات ثمان من صفات الجلال",
    "id": 84,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_85",
    "title": "وفيها بيان صفات الحق جلّ جلاله ثمّ عظة الناس بالتقوى والمشورة",
    "id": 85,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_86",
    "title": "وهي في بيان صفات المتقين وصفات الفساق",
    "id": 86,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_87",
    "title": "وفيها بيان للأسباب التي تهلك الناس",
    "id": 87,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_88",
    "title": "في الرسول الأعظم(صلى الله عليه وآله وسلم) وبلاغ الإمام عنه",
    "id": 88,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_89",
    "title": "وتشتمل على قِدم الخالق وعظم مخلوقاته، ويختمها بالوعظ",
    "id": 89,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_90",
    "title": "تعرف بخطبة الاشباح وهي من جلائل الخُطب",
    "id": 90,
    "parentId": 0,
    "childs": []
  },
  {
    "level": 1,
    "key": "khotab_91",
    "title": "لما أراده الناس على البيعة بعد قتل عثمان",
